<h1>Login page</h1>

<% if current_user %>
    <h4>Welcome <%= current_user.username %></h4>
<% else %>
<h2 class="error"><%= flash[:message] %></h2>
<% end %>

<%= form_tag '/login' do %> 
    <%= label_tag "Username" %>
    <%= text_field_tag :username %>
    <%= label_tag "Password" %>
    <%= password_field_tag :password %>
    <%= submit_tag "Log in"%>
<% end %>

<%= link_to "Create new user", new_user_path %>